{
  "name": "clean-architecture-todo-list-app",
  "version": "0.0.1",
  "description": "This project is intended to show the power of scale by using clean architecture in a project, even with an application with \"simple\" functionality such as a ToDo List.",
  "main": "dist/index.js",
  "scripts": {
    "env:dev": "dotenv -e .env.development --",
    "dev": "npm run env:dev -- ts-node --transpile-only src/index.ts",
    "test": "dotenv -e .env.test -- jest --passWithNoTests",
    "build": "tsc",
    "prisma:generate": "npm run env:dev -- prisma generate --schema src/infrastructure/prisma/schema.prisma",
    "prisma:migrate": "npm run env:dev -- prisma migrate dev --schema src/infrastructure/prisma/schema.prisma --skip-seed",
    "prisma:reset": "npm run env:dev -- prisma migrate reset --schema src/infrastructure/prisma/schema.prisma --skip-seed",
    "prisma:studio": "npm run env:dev -- prisma studio --schema src/infrastructure/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonrsm/clean-architecture-todo-list-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramonrsm/clean-architecture-todo-list-app/issues"
  },
  "homepage": "https://github.com/ramonrsm/clean-architecture-todo-list-app#readme",
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.0",
    "prisma": "^3.1.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-path-mapping": "^0.1.4",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "dotenv-expand": "^5.1.0",
    "dotenv-flow": "^3.2.0",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "npx prettier --write --ignore-unknown --stdin ./src",
      "eslint --fix",
      "npm test"
    ]
  },
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  }
}
